# Legacy Adapter Service Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# MSSQL Database Connection
# ============================================================================
# Your legacy MSSQL 2012 server connection details
#
# IMPORTANT: This adapter automatically uses TDS 7.3 protocol for MSSQL 2012
# compatibility. You only need to configure host, port, credentials below.
# The following settings are handled automatically in the code:
#   - TDS version 7.3 (required for MSSQL 2012)
#   - Encryption disabled (MSSQL 2012 doesn't support modern TLS)
#   - Trust server certificate enabled
#
LEGACY_DB_HOST=96.9.90.64
LEGACY_DB_PORT=1500
LEGACY_DB_USER=sa
LEGACY_DB_PASSWORD=123456
LEGACY_DB_NAME=LegacySIS

# ============================================================================
# Security Settings
# ============================================================================
# Generate a secure API key with: openssl rand -hex 32
API_KEY=your-secure-api-key-here-generate-with-openssl-rand-hex-32

# Allowed CORS origins (comma-separated)
# Add your Django server URL here
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:8000

# Allowed hostnames (for TrustedHostMiddleware in production)
ALLOWED_HOSTS=legacy-adapter.vps.example.com,localhost

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Application Settings
# ============================================================================
# Set to true only for local development
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
